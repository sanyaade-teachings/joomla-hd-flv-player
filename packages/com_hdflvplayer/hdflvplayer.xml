<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="3.0" method="upgrade">
    <name>HD FLV Player</name>
    <creationDate>Nov 2012</creationDate>
     <copyright>Copyright (C) 2012 Apptha - All rights reserved.</copyright>
     <license>GNU/GPLv3 http://www.gnu.org/licenses/gpl-3.0.html</license>
    <author>Apptha</author>
    <authorEmail>support@apptha.com</authorEmail>
    <authorUrl>http://www.apptha.com</authorUrl>
    <version>2.0</version>
    <description></description>
    <install> <!-- Runs on install -->
        <sql>
            <file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
        </sql>
    </install>
    <uninstall> <!-- Runs on uninstall -->
        <sql>
            <file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
        </sql>
    </uninstall>
    <files folder="site">
        <filename>index.html</filename>
        <filename>hdflvplayer.php</filename>
        <filename>controller.php</filename>
        <filename>router.php</filename>
        <folder>views</folder>
        <folder>models</folder>
        <folder>images/</folder>
        <folder>hdflvplayer/</folder>
        <folder>css</folder>
        <folder>videos</folder>
        <folder>js</folder>
    </files>
    <languages folder="site">
        <language tag="en-GB">language/en-GB/en-GB.com_hdflvplayer.ini</language>
        <language tag="en-GB">language/en-GB/en-GB.mod_hdflvplayer.ini</language>
    </languages>
    <administration>
        <menu link="option=com_hdflvplayer" img="components/com_hdflvplayer/images/icon.png">COM_HDFLVPLAYER</menu>
        <submenu>
            <menu link="option=com_hdflvplayer&amp;task=uploadvideos" img="components/com_hdflvplayer/images/membervideos.png" >COM_HDFLVPLAYER_SUBMENU_VIDEOS</menu>
            <menu link="option=com_hdflvplayer&amp;task=editplayersettings" img="components/com_hdflvplayer/images/playersettings.png" >COM_HDFLVPLAYER_SUBMENU_SETTINGS</menu>
            <menu link="option=com_hdflvplayer&amp;task=playlistname" img="components/com_hdflvplayer/images/iconcategory.png" >COM_HDFLVPLAYER_SUBMENU_PLAYLIST</menu>
            <menu link="option=com_hdflvplayer&amp;task=checklist" img="components/com_hdflvplayer/images/checklist.png" >COM_HDFLVPLAYER_SUBMENU_CHECKLIST</menu>
            <menu link="option=com_hdflvplayer&amp;task=editlanguagesetup" img="components/com_hdflvplayer/images/language-settings.png" >COM_HDFLVPLAYER_SUBMENU_LANGUAGE</menu>
            <menu link="option=com_hdflvplayer&amp;task=ads" img="components/com_hdflvplayer/images/ads.png" >COM_HDFLVPLAYER_SUBMENU_ADS</menu>
            <menu link="option=com_hdflvplayer&amp;task=addgoogle" img="components/com_hdflvplayer/images/googleadsense.png" >COM_HDFLVPLAYER_SUBMENU_GOOGLEADSENSE</menu>
        </submenu>

        <files folder="administrator">
             <filename>index.html</filename>
            <filename>toolbar.hdflvplayer.html.php</filename>
            <filename>toolbar.hdflvplayer.php</filename>
            <filename>hdflvplayer.php</filename>
            <filename>hdflvplayerController.php</filename>
             <filename>config.xml</filename>
             <folder>css/</folder>
            <folder>assets/</folder>
            <folder>helpers</folder>
            <folder>images/</folder>
            <folder>js/</folder>
            <folder>models/</folder>
            <folder>sql</folder>
            <folder>tables/</folder>
            <folder>views</folder>
            <folder>elements/</folder>
            <folder>language/</folder>
         </files>
        <languages folder="administrator">
           <language tag="en-GB">language/en-GB/en-GB.com_hdflvplayer.sys.ini </language>
        </languages>
    </administration>
</extension>
